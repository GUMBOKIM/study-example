{
  "formatter": {
    "lineWidth": 80,
    "quoteStyle": "single",
    "jsxSingleQuote": true,
    "semi": true,
    "trailingComma": "all"
  },
  "linter": {
    "rules": {
      "no-unused-vars": "error",
      "eqeqeq": ["error", "always"],
      "no-console": "warn"
    }
  },
  "files": {
    "include": ["src/**/*.{js,jsx,ts,tsx}"],
    "exclude": ["node_modules"]
  }
}